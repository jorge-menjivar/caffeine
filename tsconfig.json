{
  "compilerOptions": {
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "custom.d.ts"
  ],
  "exclude": ["node_modules"]
}
